@model Suplemento
<style>
.product-img {
    max-height: 180px;   /* antes estava 250px; agora menor para caber mais texto */
    width: auto;         /* mantém a proporção */
    object-fit: contain; /* evita distorção e recorte */
    margin: 0 auto;
    display: block;
}
</style>

<div class="container my-5">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 justify-content-center">

        <!-- Card do produto -->
        <div class="col d-flex justify-content-center">
            <div class="card shadow-sm text-center" style="width: 18rem;">
                <img src="/images/Produtos/@Model.ImagemUrl"
                     class="card-img-top product-img"
                     alt="@Model.Nome">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@Model.Nome</h5>
                    <p class="card-text text-muted">
                        Descrição breve do produto com os principais benefícios em 2-3 linhas.
                    </p>
                    <div class="mt-auto">
                        <h6 class="fw-bold text-success mb-3">R$ 49,90</h6>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

