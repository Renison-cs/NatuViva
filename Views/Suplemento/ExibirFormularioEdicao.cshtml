@model NatuViva.Models.Suplemento


<div class="container py-4">


    <div class="row">
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card h-100 produto-card">
                <img src="/images/produtos/@Model.ImagemUrl" class="card-img-top p-3" alt="@Model.Nome" style="height: 200px; object-fit: contain;">
            </div>
        </div>
    </div>
</div>


<form asp-controller="Suplemento" asp-action="Editar" method="post">
   
       
        <input type="hidden" asp-for="SuplementoId" class="form-control" />
        
   

    <div class="mb-3">
       
        <input asp-for="Nome" class="form-control" />
       
    </div>

    <div class="mb-3">
        <label asp-for="ImagemUrl" class="form-label"></label>
        <input asp-for="ImagemUrl" class="form-control" />
        <span asp-validation-for="ImagemUrl" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Beneficios" class="form-label"></label>
        <input asp-for="Beneficios" class="form-control" />
        <span asp-validation-for="Beneficios" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Preco" class="form-label"></label>
        <input asp-for="Preco" class="form-control" />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
