@model NatuViva.Models.Suplemento


@{
    ViewData["Title"] = "Cadastro de Suplemento";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">Cadastro de Suplemento</h4>
        </div>
        <div class="card-body">
            <form asp-action="CadastrarSuplemento">
                <div class="mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Beneficios" class="form-label"></label>
                    <textarea asp-for="Beneficios" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Beneficios" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ImagemUrl" class="form-label"></label>
                    <input asp-for="ImagemUrl" class="form-control" />
                    <span asp-validation-for="ImagemUrl" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Preco" class="form-label"></label>
                    <input asp-for="Preco" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success">Cadastrar</button>
                <a class="btn btn-secondary" asp-action="Cancelar">Cancelar</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
